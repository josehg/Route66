{% extends '::base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>{{ negocio.nombre }}</h1>
                <div class="row">
                    <div class="col-md-12">
                        {% for categoria in negocio.categorias %}
                            <span class="label label-primary">{{ categoria.nombre }}</span>
                        {% endfor %}
                    </div>
                </div>
                <hr>
                <p>{{ negocio.descripcion }}</p>
            </div>
        </div>
    </div>

{% endblock %}